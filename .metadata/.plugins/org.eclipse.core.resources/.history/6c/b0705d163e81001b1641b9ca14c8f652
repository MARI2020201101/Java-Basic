package oop0310;

public class Test01_if {
	public static void main(String[] args) {
		
		String name ="mari";
		int kor =100, eng=100, mat=100;
		
		int aver = (kor+eng+mat)/3;
		System.out.printf("이름 : %s\n" , name);
		System.out.printf("국어 : %d\n" , kor);
		System.out.printf("영어 : %d\n" , eng);
		System.out.printf("수학 : %d\n" , mat);
		System.out.printf("평균 : %d\n" , aver);
		
		//문제1) 평균이 95이상 - 장학생
		if(aver>=95)System.out.printf("%s\t님은 장학생입니다.",name);
		else System.out.printf("%s\t님은 장학생이 아닙니다.",name);
		//문제2) 국어가 70이상 - 합격 
		//문제3) 수학이 90이상 -A, 80이상 - B,70이상 - C, 60이상 - D,나머지 F
		
	}
	

}
