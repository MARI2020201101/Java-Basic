package oop0317;

public class Jumin {
	private String jumin;//주민번호

	public Jumin(String jumin) {
		this.jumin = jumin;
	}
	public Jumin() {	}
	
	public boolean validate() {
		//주민번호가 유효한지 검증
		//970129-2417212
		boolean flag = false;
		if(jumin.length()!= 13) {
			return flag;
		}
		String[] jumins = jumin.split("");
		int[] j = new int[13];
		int result = 0;
		for(int i =0; i<jumins.length ; i++) {
			j[i] = Integer.parseInt(jumins[i]);
			result +=j[i]*((i+2)%8);
		}
		if(result%11==j[13]) {
			flag = true;
		}
		return flag;
	}	
	public void disp() {
		//생년월일, 성별, 나이, 띠 , 살아온 날수 출력하기 
		//쥐 소 호랑이 토끼 용 뱀 말 양 원숭이 닭 개 돼지
		/*
		 * 생년월일 : 1989년 12월 30일 -> 
		 * 			주민번호 앞자리 짤라서 가공
		 * 현재 날짜 기준 
		 * 성별 : 남자 
		 * 나이 : 32 -> GregorianCalendar 클래스 이용
		 * 띠 : ->태어난년도 %12 , 0 원숭이 1닭 2 개..
		 */
		
	}
}
