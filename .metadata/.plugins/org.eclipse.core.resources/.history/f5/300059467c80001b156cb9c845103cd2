package oop0309;

public class Test02_quiz {
	public static void main(String[] args) {
		//문1) 임의의 정수가 짝수인지 확인하시오
		int num = 1;
		if(num%2!=0) {
			System.out.println("홀수입니다");
		}else System.out.println("짝수입니다");
			
		
		//문2) 임의의 정수가 3의 배수인지 확인하시오
		if(num%3==0) {
			System.out.println("3의 배수입니다");
		}else System.out.println("3의 배수가 아닙니다");
		
		
		//문3) 해당 년도가 윤년인지 확인하시오
		if(num%365!=0){
			System.out.println("윤년입니다");
		}else System.out.println("윤년이 아닙니다");
		
		//문4) 지폐의 갯수를 구하시오
		int money=54320;
		/*
		   만원 5 장
		   천원 4 장
		   백원 3 장
		   십원 2 장		
		*/
		int result = 0;
		result += money/10000;
		result += money/1000;
		System.out.println(money + " 지폐의 개수 : " + result);
				

		//문5) 임의의 정수가 2의 배수이면서 5의 배수인지 확인하시오
		
		
		//문6) 국어점수가 80~89사이인지 확인하시오

		
		//문7) 임의의 정수가 3 또는 4인지 확인하시오
		
		
		//문8) 임의의 문자가 'Y' 또는 'y'인지 확인하시오

	}
	}
}
